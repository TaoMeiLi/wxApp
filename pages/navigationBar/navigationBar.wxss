/* pages/list/list.wxss */
.list-component {
  width: 100%;
}
.top1{
  width: 100%;
  height: 128rpx;
  background:#FF6D55;
  color: #fff;
  position: fixed;
  top: 0;
  left:0;
  z-index: 2;
  font-size: 28rpx;
  text-align: center;
  box-sizing: border-box;
  padding-top:64rpx;
  opacity:0;
}

.top2 {
  width: 100%;
  height: 128rpx;
  background: #FF6D55;
  color: #fff;
  font-size: 28rpx;
  text-align: left;
  box-sizing: border-box;
  padding-top:64rpx;
  padding-left:20rpx;
}
.searchbar {
  width: 100%;
  height: 100rpx;
  background: #FF6D55;
  text-align: center;
  display: flex;
  justify-content: center;
  font-size: 24rpx;
}
input {
  width: 80%;
  height:60rpx;
  margin-top:24rpx;
  background:#fff;
  color:#ddd;
  border-radius: 30rpx;
  text-align: left;
  padding-left: 30rpx;
}
image {
  width: 100%;
}